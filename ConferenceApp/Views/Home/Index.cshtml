@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

@{
    ViewData["Title"] = "Home Page";
}

@if (SignInManager.IsSignedIn(User))
{
    <div class="text-center">
        <h1 class="display-4">My Calendar</h1>
    </div>
    <hr/>
    <div>
        <a asp-controller="Conference" asp-action="Details" asp-route-id="3">Programming Conference</a><br/>
        <a asp-controller="Event" asp-action="Details" asp-route-id="1">Buenas prácticas en programación</a><br/>
        <h6>Create event en deuda</h6><br/>
        <h6>If admin link to admin show</h6><br/>
    </div>   
}
else {
    <div class="text-center">
        <h1 class="display-4">Welcome to ConferenceApp!</h1>
    </div>
    
    <div style="text-align: center; border: 1px solid; margin: auto; width: 100px">
        <a class="btn-ce" asp-area="Identity" asp-page="/Account/Login">Login</a>
    </div>
}
