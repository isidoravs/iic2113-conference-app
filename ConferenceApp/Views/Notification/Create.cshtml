@model ConferenceApp.Models.Notification

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Notification</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-controller="Notification" asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label name="receivers" class="control-label">Destinatarios</label>
                <select name="receivers" class ="form-control" asp-items="ViewBag.ReceiverOptions"></select>
            </div>
            <div class="form-group">
                <label name="subject" class="control-label"></label>
                <input name="subject" class="form-control" />
            </div>
            <div class="form-group">
                <label name="message" class="control-label"></label>
                <input name="message" class="form-control" />
            </div>
            <div class="form-group">
                <input type="hidden" name="senderUserEmail" value="@ViewBag.SenderUserEmail"/>
                <input type="hidden" name="eventId" value="@ViewBag.EventId"/>
                <input type="hidden" name="conferenceId" value="@ViewBag.ConferenceId"s/>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Lista de Notificationes</a>
    <a href='javascript:history.go(-1)'>Volver</a>

</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}